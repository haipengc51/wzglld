<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:background="@color/transparent">

    <View
        style="@style/line_d5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:gravity="bottom"
        android:background="@color/white"
        android:orientation="horizontal">


        <FrameLayout
            android:id="@+id/tab_one_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_50"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/toolbar_tabonebg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/footer_active_bg"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5.0dp">

                <ImageView
                    android:id="@+id/toolbar_tabone"
                    android:layout_width="@dimen/height_40"
                    android:layout_height="@dimen/height_40"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_me" />

                <TextView
                    android:id="@+id/tab_one_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:text="@string/find"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/tab_two_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_50"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/toolbar_tabtwobg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/footer_active_bg"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5.0dp">

                <ImageView
                    android:id="@+id/toolbar_tabtwo"
                    android:layout_width="@dimen/height_40"
                    android:layout_height="@dimen/height_40"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_me" />

                <TextView
                    android:id="@+id/tab_two_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2.0dp"
                    android:text="@string/record"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/tab_three_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_50"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/toolbar_tabthreebg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/footer_active_bg"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5.0dp">

                <ImageView
                    android:id="@+id/toolbar_tabthree"
                    android:layout_width="@dimen/height_40"
                    android:layout_height="@dimen/height_40"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_me" />

                <TextView
                    android:id="@+id/tab_three_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2.0dp"
                    android:text="@string/scrap"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/tab_four_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_50"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/toolbar_tabfourbg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/footer_active_bg"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5.0dp">

                <ImageView
                    android:id="@+id/toolbar_tabfour"
                    android:layout_width="@dimen/height_40"
                    android:layout_height="@dimen/height_40"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_me" />

                <TextView
                    android:id="@+id/tab_four_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/me"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>