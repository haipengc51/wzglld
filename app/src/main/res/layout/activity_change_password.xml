<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/title_image_text_image"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/marginTop15"
        android:lines="1"
        android:ellipsize="end"
        android:text="更改密码后下次登录可以使用新密码登录"
        android:textColor="@color/text_content_color"
        android:textSize="@dimen/content_text_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/acount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/marginTop10"
            android:paddingLeft="@dimen/marginTop15"
            android:paddingRight="@dimen/marginTop20"
            android:paddingTop="@dimen/marginTop10"
            android:text="账    号　"
            android:textColor="@color/black"
            android:textSize="@dimen/content_text_size"/>

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:background="@color/white"
            android:paddingBottom="@dimen/marginTop10"
            android:paddingLeft="@dimen/marginTop15"
            android:paddingTop="@dimen/marginTop10"
            android:textColor="@color/text_content_color"
            android:textSize="@dimen/content_text_size" />
    </LinearLayout>

    <View style="@style/line_d5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/old_scret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/marginTop10"
            android:paddingLeft="@dimen/marginTop15"
            android:paddingRight="@dimen/marginTop20"
            android:paddingTop="@dimen/marginTop10"
            android:text="原密码　"
            android:textColor="@color/black"
            android:textSize="@dimen/content_text_size"/>

        <EditText
            android:id="@+id/et_original_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="请输入原密码"
            android:singleLine="true"
            android:inputType="textPassword"
            android:paddingBottom="@dimen/marginTop10"
            android:paddingLeft="@dimen/marginTop15"
            android:paddingTop="@dimen/marginTop10"
            android:textSize="@dimen/content_text_size"
            android:textColor="@color/text_content_color"/>

        <ImageView
            android:id="@+id/old_password_input_cancle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:src="@drawable/delet_recommend"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/old_password_visible"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:src="@drawable/ic_password_gone"
            android:visibility="gone"/>
    </LinearLayout>

    <View style="@style/line_d5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/new_scret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/marginTop10"
            android:paddingLeft="@dimen/marginTop15"
            android:paddingRight="@dimen/marginTop20"
            android:paddingTop="@dimen/marginTop10"
            android:text="新密码　"
            android:textColor="@color/black"
            android:textSize="@dimen/content_text_size"/>

        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="请输入新密码"
            android:singleLine="true"
            android:inputType="textPassword"
            android:paddingBottom="@dimen/marginTop10"
            android:paddingLeft="@dimen/marginTop15"
            android:paddingTop="@dimen/marginTop10"
            android:textSize="@dimen/content_text_size"
            android:textColor="@color/text_content_color"/>
        <ImageView
            android:id="@+id/new_password_input_cancle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:src="@drawable/delet_recommend"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/new_password_visible"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:src="@drawable/ic_password_gone"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/new_scret_agin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/marginTop10"
            android:paddingLeft="@dimen/marginTop15"
            android:paddingRight="@dimen/marginTop20"
            android:paddingTop="@dimen/marginTop10"
            android:text="确认密码"
            android:textColor="@color/black"
            android:textSize="@dimen/content_text_size"/>

        <EditText
            android:id="@+id/et_new_password_agin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="请再次输入新密码"
            android:singleLine="true"
            android:inputType="textPassword"
            android:paddingBottom="@dimen/marginTop10"
            android:paddingLeft="@dimen/marginTop15"
            android:paddingTop="@dimen/marginTop10"
            android:textSize="@dimen/content_text_size"
            android:textColor="@color/text_content_color"/>
        <ImageView
            android:id="@+id/new_password_input_cancle_agin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:src="@drawable/delet_recommend"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/new_password_visible_agin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:src="@drawable/ic_password_gone"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:layout_marginLeft="@dimen/marginTop10"
        android:layout_marginRight="@dimen/marginTop10"
        android:layout_marginTop="@dimen/marginTop30"
        android:gravity="center"
        style="@style/button_style"
        android:text="确认修改密码"
        android:textColor="@color/white"
        android:textSize="@dimen/content_text_size" />

</LinearLayout>